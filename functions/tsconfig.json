{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "ES2019",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false
    },
    "compileOnSave": true,
    "include": [
        "**/*.ts",
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}